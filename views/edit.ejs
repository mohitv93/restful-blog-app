<% include partials/header.ejs %>
<div class="ui main text container segment">
    <div class="ui huge header"><%= edit.title %></div>
    <form class="ui form" action="/blogs/<%= edit._id%>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" value="<%= edit.title %>">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" value="<%= edit.image %>">
        </div>
        <div class="field">
            <label>Blog Content</label>
            <textarea name="blog[body]" rows="6"><%= edit.body %></textarea>
        </div>
        <input class="ui violet big basic button" type="submit">
    </form>
</div>
<% include partials/footer.ejs %>